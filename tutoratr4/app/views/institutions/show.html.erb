<% render :partial => 'application/singular_title', :locals => { :name => @institution.name }%>

<h1><%= @institution.name %></h1>

<h3>Info</h3>

<div class="tutor-data">

    <%= I18n.t('layout.country') %>:
    <%= link_to @institution.country.name, @institution.country, :class => 'rating-institution' %> 
    <%= link_to(image_tag('flags/'+@institution.country.code.downcase+'.gif'), @institution.country) %>

    <br />
    <br />

    <%= I18n.t('layout.description') %>:
    <strong><%= @institution.description %></strong>

    <br />

</div>
