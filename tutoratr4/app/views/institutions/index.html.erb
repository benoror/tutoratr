<%= render :partial => 'application/index_title' %>

<%= will_paginate @institutions, { :previous_label => "&lt;&lt;", :next_label => "&gt;&gt;" } %>

<% @institutions.each do |institution| %>
  <div class="tutor">
    <span class="rating-from">
      <%= link_to institution.country.name, institution.country, :class => 'rating-institution' %> 
      <%= link_to(image_tag('flags/'+institution.country.code.downcase+'.gif')	, institution.country) %>
    </span>
    <%= link_to institution.name, institution, :class => 'rating-tutor' %>
  
    <div class="rating-sender">
      <%= I18n.t('datetime.distance_in_words.hace') %> <%=h time_ago_in_words(institution.updated_at.to_time) %> <%= I18n.t('datetime.distance_in_words.ago') %>
    </div>
    
  </div>
<% end %>

<%= will_paginate @institutions, { :previous_label => "&lt;&lt;", :next_label => "&gt;&gt;" } %>
