<%= render :partial => 'application/singular_title' %>

<% form_for(@institution) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :country_id %><br />
    <%= select(:institution, :country_id, Country.all.collect {|c| [ c.name, c.id ] }, {:include_blank => true})%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', institutions_path %>
